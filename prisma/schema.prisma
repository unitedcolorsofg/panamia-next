// =============================================================================
// Prisma Schema for PostgreSQL (Vercel Postgres)
// =============================================================================
//
// This schema defines the PostgreSQL tables for the polyglot persistence
// architecture. Phase 1: Infrastructure only - auth remains on MongoDB.
//
// See: docs/DATABASE-ROADMAP.md for architecture details
// =============================================================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // Note: Database URL configured in prisma.config.ts (Prisma 7+)
  // Runtime connections use adapters configured in lib/prisma.ts
}

// =============================================================================
// NextAuth.js Models
// =============================================================================
// These models mirror the MongoDB nextauth_* collections but are NOT yet active.
// Auth migration happens in Phase 2.
//
// MongoDB collections → PostgreSQL tables:
//   nextauth_users              → users
//   nextauth_accounts           → accounts
//   nextauth_sessions           → sessions
//   nextauth_verification_tokens → verification_tokens

enum AccountType {
  personal
  small_business
  hybrid
  other
}

model User {
  id                      String      @id @default(cuid())
  email                   String      @unique
  emailVerified           DateTime?
  name                    String?
  screenname              String?     @unique
  role                    String      @default("user")
  accountType             AccountType @default(personal)
  lockedAt                DateTime?
  alternateEmails         String[]
  notificationPreferences Json?
  zipCode                 String?
  affiliate               Json?
  createdAt               DateTime    @default(now())
  updatedAt               DateTime    @updatedAt

  accounts              Account[]
  sessions              Session[]
  notificationsSent     Notification[]   @relation("NotificationActor")
  notificationsReceived Notification[]   @relation("NotificationTarget")
  articles              Article[]        @relation("ArticleAuthor")
  articlesRemoved       Article[]        @relation("ArticleRemovedBy")
  profile               Profile?
  following             UserFollow[]     @relation("Follower")
  followers             UserFollow[]     @relation("Following")
  listsOwned            UserList[]
  listMemberships       UserListMember[]

  @@map("users")
}

// =============================================================================
// Social Features (Following, Lists)
// =============================================================================
// User-to-user following relationship and user-curated lists
// Migrated from MongoDB user.following[] and userlist collections

model UserFollow {
  id          String   @id @default(cuid())
  followerId  String
  followingId String
  createdAt   DateTime @default(now())

  follower  User @relation("Follower", fields: [followerId], references: [id], onDelete: Cascade)
  following User @relation("Following", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
  @@map("user_follows")
}

model UserList {
  id          String   @id @default(cuid())
  ownerId     String
  name        String
  description String?
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  owner   User             @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  members UserListMember[]

  @@index([ownerId])
  @@map("user_lists")
}

model UserListMember {
  id      String   @id @default(cuid())
  listId  String
  userId  String
  addedAt DateTime @default(now())

  list UserList @relation(fields: [listId], references: [id], onDelete: Cascade)
  user User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([listId, userId])
  @@index([listId])
  @@index([userId])
  @@map("user_list_members")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// =============================================================================
// Notifications
// =============================================================================
// ActivityPub-shaped notification system
// UPSTREAM REFERENCE: https://github.com/llun/activities.next
//
// Note: actor/target reference PostgreSQL user IDs (cuid format)
// object references MongoDB ObjectIds as strings (articles, sessions, etc.)

enum NotificationActivityType {
  Invite
  Accept
  Reject
  Create
  Update
  Delete
  Announce
  Like
  Follow
  Undo
}

enum NotificationContext {
  coauthor
  review
  article
  mentoring
  mention
  follow
  system
}

enum NotificationObjectType {
  article
  profile
  session
  comment
}

model Notification {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Core ActivityPub-shaped fields
  type   NotificationActivityType
  actor  String // PostgreSQL User.id who triggered this
  target String // PostgreSQL User.id who receives this
  object String? // MongoDB ObjectId as string (article, session, etc.)

  // Context
  context NotificationContext

  // Denormalized display data (avoids cross-database joins)
  actorScreenname String?
  actorName       String?
  objectType      NotificationObjectType?
  objectTitle     String?
  objectUrl       String?
  message         String? // Personal message (invitation text)

  // State
  read   Boolean   @default(false)
  readAt DateTime?

  // Email tracking
  emailSent          Boolean   @default(false)
  emailSentAt        DateTime?
  emailPreferenceKey String?

  // Retention (application-level cleanup, not TTL index)
  expiresAt DateTime?

  // Relations to User
  actorUser  User @relation("NotificationActor", fields: [actor], references: [id], onDelete: Cascade)
  targetUser User @relation("NotificationTarget", fields: [target], references: [id], onDelete: Cascade)

  // Indexes for efficient queries
  @@index([target, read, createdAt(sort: Desc)])
  @@index([target, context, createdAt(sort: Desc)])
  @@index([expiresAt])
  @@map("notifications")
}

// =============================================================================
// Articles
// =============================================================================
// UPSTREAM REFERENCE: https://github.com/llun/activities.next
// Schema designed for future ActivityPub federation as Note/Article objects
//
// Note: authorId references PostgreSQL user ID (cuid format)
// coAuthors and reviewedBy stored as JSONB for flexibility

enum ArticleType {
  business_update
  community_commentary
}

enum ArticleStatus {
  draft
  pending_review
  revision_needed
  published
  removed
}

// =============================================================================
// Profiles
// =============================================================================
// Business/personal profiles with core identity columns and flexible JSONB data
//
// Core immutable data (columns): name, phone, pronouns, image, address, membership
// Extended flexible data (JSONB): descriptions, socials, categories, locations, etc.

enum MembershipLevel {
  free
  basic
  premium
  business
  partner
}

model Profile {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Link to auth user
  userId String? @unique
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  // === CORE IMMUTABLE DATA (columns) ===

  // Identity
  email String  @unique
  name  String
  slug  String? @unique // screenname/handle

  // Contact
  phoneNumber String?

  // Pronouns (stored as simple string: "she/her", "he/him", "they/them", "any", or custom)
  pronouns String?

  // Primary Image
  primaryImageId  String? // Image ID
  primaryImageCdn String? // CDN URL

  // Primary Address (international-friendly structure)
  // Following best practices for international addresses
  addressName          String? // Business/location name
  addressLine1         String? // Street address
  addressLine2         String? // Apt, suite, building, floor, etc.
  addressLine3         String? // Additional line (some countries need this)
  addressLocality      String? // City/town/village
  addressRegion        String? // State/province/prefecture/region
  addressPostalCode    String? // Postal/ZIP code (format varies by country)
  addressCountry       String? // ISO 3166-1 alpha-2 country code (e.g., "US", "MX", "CO")
  addressLat           Decimal? @db.Decimal(10, 7) // Latitude with precision
  addressLng           Decimal? @db.Decimal(10, 7) // Longitude with precision
  addressGooglePlaceId String? // Google Places API ID
  addressHours         String? // Business hours at this location

  // Status/Membership Levels
  active          Boolean         @default(false)
  locallyBased    String?
  membershipLevel MembershipLevel @default(free)

  // === EXTENDED FLEXIBLE DATA (JSONB) ===

  // Profile Descriptions
  // Structure: { details, background, fiveWords, tags, hearaboutus }
  descriptions Json?

  // Links and Socials
  // Structure: { website, instagram, facebook, tiktok, twitter, spotify }
  socials Json?

  // Gallery Images (non-primary)
  // Structure: { gallery1, gallery1CDN, gallery2, gallery2CDN, gallery3, gallery3CDN }
  galleryImages Json?

  // Categories - what the profile offers
  // Structure: { products, services, events, music, food, clothing, accessories, art, digital_art, tech, health_beauty, wellness, non_profit, homemade }
  categories Json?

  // Service Counties
  // Structure: { palm_beach, broward, miami_dade }
  counties Json?

  // Additional Locations (international-friendly)
  // Structure: Array of { name, line1, line2, line3, locality, region, postalCode, country, lat, lng, googlePlaceId, hours }
  locations Json?

  // Geolocation data
  geo Json?

  // Mentoring settings
  // Structure: { enabled, expertise[], languages[], bio, videoIntroUrl, goals, hourlyRate }
  mentoring Json?

  // Availability schedule
  // Structure: { timezone, schedule: [{ day, startTime, endTime }] }
  availability Json?

  // Verification status
  // Structure: { panaVerified, legalAgeVerified, verifiedOn, verifiedBy }
  verification Json?

  // Special roles
  // Structure: { mentoringModerator, eventOrganizer, contentModerator }
  roles Json?

  // Gente de Pana affiliate info
  // Structure: { code, percentage, details }
  gentedepana Json?

  // Profile workflow status
  // Structure: { submitted, approved, published, notes }
  status Json?

  // Administrative data
  administrative Json?

  // Linked profiles (for business connections)
  linkedProfiles Json?

  // === OTHER FIELDS ===

  whatsappCommunity Boolean @default(false)
  affiliate         String?

  // Indexes for common queries
  @@index([email])
  @@index([slug])
  @@index([userId])
  @@index([active])
  @@map("profiles")
}

model Article {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Core content
  slug       String  @unique
  title      String
  content    String // Markdown or HTML content
  excerpt    String?
  coverImage String?

  // Classification
  articleType ArticleType
  tags        String[]

  // Attribution - FK to PostgreSQL users
  authorId String
  author   User   @relation("ArticleAuthor", fields: [authorId], references: [id], onDelete: Cascade)

  // Co-authors stored as JSONB for flexibility
  // Structure: [{ userId, invitedAt, invitationMessage, status, acceptedAt }]
  coAuthors Json @default("[]")

  // Review record stored as JSONB
  // Structure: { userId, requestedAt, invitationMessage, status, checklist, comments, approvedAt }
  reviewedBy Json?

  // Threading - self-referencing for replies
  inReplyTo     String?
  parentArticle Article?  @relation("ArticleReplies", fields: [inReplyTo], references: [id], onDelete: SetNull)
  replies       Article[] @relation("ArticleReplies")

  // Workflow
  status      ArticleStatus @default(draft)
  publishedAt DateTime?

  // Removal tracking
  removedAt     DateTime?
  removedBy     String?
  removedByUser User?     @relation("ArticleRemovedBy", fields: [removedBy], references: [id], onDelete: SetNull)
  removalReason String?

  // Metadata
  readingTime     Int     @default(1)
  mastodonPostUrl String?

  // Indexes for common queries
  @@index([status, publishedAt(sort: Desc)])
  @@index([authorId, status])
  @@index([inReplyTo])
  @@map("articles")
}
